<div class="container">
  <div class="form-container">
    <div class="w-150 mx-auto shadow p-5 py-5 my-5 bg-body rounded">
      <h2>Add Your Blog Posts</h2>
      <%= render 'components/blog-form' %>
    </div>
        <h1>Blog Post</h1>
      <div class="w-150 mx-auto shadow p-5 py-5 my-5 bg-body rounded">

          <% @blogposts.each do |blogpost| %>
            <h1><%= blogpost.title %></h1>
            <p><%= blogpost.description %></p>
            <p><%= blogpost.id %></p>
              <% blogpost.posts.each do |post| %>
                <h4><%= post.sectiontitle %></h4>
                <p><%= post.content %></p>
                <p><%= post.blogpost_id %></p>
              <% end %>

              <%= link_to "Add a post", new_post_path(blogpost), class: 'btn btn-secondary' %>
          <% end %>


          <%# <%= render 'components/post-form' %>
          </ul>

      </div>

     <%= link_to "Back to top", projects_path, class: 'btn btn-secondary' %>
     <%= link_to "Back to profile", user_path(current_user.id), class: 'btn btn-secondary' %>
  </div>

  <div>
    <% @assignments.each do |assignment| %>
    <%= assignment.blogpost_id %>
    <%= assignment.post_id %>
    <% end %>
  </div>
</div>
